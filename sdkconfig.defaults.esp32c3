# ====================================================
# ESP32-C3 默认SDK配置文件 (sdkconfig.defaults.esp32c3)
# 针对ESP32-C3开发板优化配置（无PSRAM）
# ====================================================

# Flash配置：16MB容量
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y
# 分区表文件：使用16MB专用分区表
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions/v2/16m_c3.csv"

# ============ 语音唤醒词配置 ============
# 启用"你好小智"唤醒词（精简版，针对ESP32-C3优化）
CONFIG_SR_WN_WN9S_NIHAOXIAOZHI=y

# ============ WiFi和网络优化 ============
# WiFi静态接收缓冲区数量（减少内存占用）
CONFIG_ESP_WIFI_STATIC_RX_BUFFER_NUM=3
# WiFi动态接收缓冲区数量（平衡性能和内存）
CONFIG_ESP_WIFI_DYNAMIC_RX_BUFFER_NUM=6
# WiFi接收块确认窗口大小
CONFIG_ESP_WIFI_RX_BA_WIN=3
# TCP/IP接收邮箱大小
CONFIG_LWIP_TCPIP_RECVMBOX_SIZE=16
# 动态释放MbedTLS配置数据（优化内存使用）
CONFIG_MBEDTLS_DYNAMIC_FREE_CONFIG_DATA=y

# ============ 功能裁剪（节省Flash和RAM）============
# 禁用WPA3 SAE安全协议（减少代码体积）
CONFIG_ESP_WIFI_ENABLE_WPA3_SAE=n
# 禁用ESPNOW加密（减少代码体积）
CONFIG_ESP_WIFI_ESPNOW_MAX_ENCRYPT_NUM=0
# FreeRTOS空闲任务栈大小：768字节（节省RAM）
CONFIG_FREERTOS_IDLE_TASK_STACKSIZE=768
# 禁用IPv6支持（减少内存占用和代码体积）
CONFIG_LWIP_IPV6=n